    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if logged_in? %>
              <% @user = current_user %>
              <h3>Xin Chao: <%= @user.name %></h3>
